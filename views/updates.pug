doctype html
html(lang="en")
    head
        title Update Custom Object Form | Integrating With HubSpot I Practicum.
        link(rel="stylesheet" href="/css/styles.css")
    body
        .container-primary
            h1 #{title}
        .container-sec
            <a href="/"> Return to the homepage</a>

        .container-forms
            form(method="POST")
                label(for="songName") Song name
                input(type="text" name="songName" required)
                label(for="artistName") Artist name
                input(type="text" name="artistName" required)
                label(for="albumName") Album name
                input(type="text" name="albumName" required)
                input(type="submit" value="Submit")
